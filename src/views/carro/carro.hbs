<style>
  .thumbnail {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.5);
    transition: 0.3s;
    min-width: 40%;
    border-radius: 5px;
  }

  .thumbnail-description {
    min-height: 40px;
  }

  .thumbnail:hover {
    cursor: pointer;
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 1);
  }


  .botonimagen{
  background-image:url(images/pp.png);
  background-repeat:no-repeat;
    background-color: #fff;
          
    border-radius: 2px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    display: block;
    height: 50px;
    width: 300px;
   
}
</style>


<div class="page-title" style="background-image: url(images/page-title.png);">
  <h1>Bolsa de Compras</h1>
</div>

<div class="container " style="margin-top: 10px;">
  <div class="row">
    <div class="col-md-6">
      {{#each carro}}

      <div class="col-sm-12">
        <div class="thumbnail">
          <div class="card mb-3">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="{{imagen}}" class="card-img">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h2 class="card-title">{{nombre}}</h2>

                  <h4>Marca:{{marca}}</h4>
                  <h4>Precio: ${{precio_venta}}</h4>
                 
                     <a href="/carrito/eliminar/{{id_carrito}}" class="btm btn-danger"     >Eliminar</a>
                   

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

    <div class="col-md-6">
      <div class="col-sm-12">
      
        <div class="thumbnail">
          <h1 style="text-align: center;">Detalle de pago</h1>
          <form action="/pay" method="POST">
            <h3>
               
                  subTotal:${{sub_total}}
                
            </h3>
            <h3>Envio:${{tax}} </h3>
            <h3>Total:${{total}} </h3>
              </div>
            <button type="submit">Pagar Via Paypal</button>
          </form>
       
      </div>
    </div>
  </div>
</div>

<script>
  function ShowSelected() {
    /* Para obtener el valor */
    var cantidad = document.getElementById("cantidad");
    return parseInt(cantidad);


  }
</script>