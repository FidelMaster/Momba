<style>
  .thumbnail {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.5);
    transition: 0.3s;
    min-width: 40%;
    border-radius: 5px;
  }

  .thumbnail-description {
    min-height: 40px;
  }

  .thumbnail:hover {
    cursor: pointer;
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 1);
  }
</style>


<div class="page-title" style="background-image: url(images/page-title.png)">
  <h1>Camisas</h1>
</div>

<div class="container " style="margin-top: 30px;">
  <div class="row">
    {{#each camisas}}
    <div class="col-md-4">
      <div class="thumbnail">
        <div class="caption text-center" onclick="location.href='http://localhost:3000/detalle/{{id}}'">
       
            <img src={{imagen}} class="card-img-top" style="height:150px; weight:150px;" >
     
          <h4>{{nombre}}</h4>
          <div class="thumbnail-description smaller">
            <h4>${{precio_venta}}.00</h4>


          </div>
        </div>
      
      </div>
    </div>
    {{/each}}
  </div>
</div>