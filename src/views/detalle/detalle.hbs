  <style>
   .thumbnail {
   box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.5);
   transition: 0.3s;
   min-width: 40%;
   border-radius: 5px;
 }

 .thumbnail-description {
   min-height: 40px;
 }

 .thumbnail:hover {
   cursor: pointer;
   box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 1);
 }
 </style>
 
 
 <div class="page-title" style="background-image: url(images/page-title.png);">
        <h1>Detalle</h1>
</div>

    <div class="container "style="margin-top: 10px;">
     <div class="row">
          <div class="col-md-4"></div>
        {{#each detalle}}

        <div class="col-md-4">
         <div class="thumbnail"  >
          <div class="card mb-3">
                            <div class="row no-gutters">
                              <div class="col-md-4">
                                <img src="{{imagen}}" class="card-img" style="height: 250px; weight:100px;">
                              </div>
                              <div class="col-md-8">
                                <div class="card-body">
                                  <h2 class="card-title">{{nombre}}</h2>
                                    <h4>Descripcion</h4>
                                    <h4>${{precio}}</h4>
                                    <h4>Marca:{{marca}}</h4>
                                    <h4>Material:{{material}}</h4>
                              
                                  <form action="/carrito/agregar/{{id}}" method="POST">
                                      <label for="input">Cantidad</label>
                                      <input type="number" placeholder="Cantidad" id="input" name="cantidad">
                                        <button type="submit" class="btn btn-primary">Agregar al carrito</button>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
         </div>
        </div>
          {{/each}}
       </div>
    </div>
